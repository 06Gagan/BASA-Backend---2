<%- include('partials/head') %>
<link rel="stylesheet" href="/css/people.css">
<body>
  <%- include('partials/header') %>
  <%- include('partials/nav') %>

  <!-- Main Content -->
  <section id="people" class="main-content">
    <div class="container">
      <h2>People</h2>

      <!-- Post-Doc Mentorship -->
      <div class="people-category">
        <h3>Post-Doc Mentorship</h3>

        <!-- Current Post-Doc Mentorship -->
        <div class="sub-category">
            <h4>Current</h4>
            <% people.forEach(person => { %>
              <% if (person.type === "Post-Doc" && person.category === "Current") { %>
                <div class="person-item">
                  <h5><%= person.name %></h5>
                  <p>
                    <% if (person.additional_info) { %><%= person.additional_info %> <% } %>
                    <% if (person.current_position) { %>| <strong>Current Position:</strong> <%= person.current_position %> <% } %>
                  </p>
                </div>
              <% } %>
            <% }) %>
          </div>
        </div>

